{{> navbar path=path}}

<div style="padding-top: 56px; padding-bottom: 56px;">
    <main class="container my-4">
        {{#each errors as |error|}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/each}}
        {{#each successes as |success|}}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
        {{/each}}
        <ul class="list-group">
            {{#each files}}
            <li class="list-group-item">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input multi-select" data-select="{{name}}"
                        data-select-size="{{size}}" id="check{{@index}}">
                    <label class="custom-control-label d-flex align-items-start justify-content-between"
                        for="check{{@index}}">
                        <span>
                            {{#if isdirectory}}
                            <a href="./{{name}}/" class="name">{{name}}/</a>
                            {{else}}
                            <a href="./{{name}}" class="name">{{name}}</a>
                            {{#if iscastable}}
                            <a class="cast-file" data-media="{{ castmedia }}" href="/@cast">
                                <span class="badge badge-pill badge-primary">Cast</span>
                            </a>
                            {{/if}}
                            {{#if issubtitle}}
                            <span class="badge badge-pill badge-secondary">Sub</span>
                            {{/if}}
                            {{#if unsupportedSubtitle}}
                            <a class="subtitle-error">
                                <span class="badge badge-pill badge-warning">
                                    Convert Sub
                                </span>
                            </a>
                            {{/if}}
                            {{#if hasEmbeddedSubtitles}}
                            <a class="subtitle-error">
                                <span class="badge badge-pill badge-warning">
                                    Extract Sub
                                </span>
                            </a>
                            {{/if}}

                        </span>
                        <span class="badge badge-pill badge-secondary">{{size}}</span>
                        {{/if}}
                    </label>
                </div>
            </li>
            {{else}}
            <li class="list-group-item">
                No files
            </li>
            {{/each}}
        </ul>
    </main>
</div>

{{> toolbar shellable=shellable cmdable=cmdable}}

{{> dialogue-upload}}
{{> dialogue-mkdir}}
{{> dialogue-cmd}}

{{> dialogue-download}}
{{> dialogue-delete}}